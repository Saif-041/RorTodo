<%= link_to " < Back to Home Page", root_path %>

<p style="color: green"><%= notice %></p>

<h1>Listing all Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
       Name: <%= user.name %>
    </p>
    <p>
        Email: <%= user.email %>
    </p>
    <p>
      <%= link_to "Show this user", user %>
    </p>
    <hr>
  <% end %>
</div>

<%= link_to "Add new user", new_user_path %>

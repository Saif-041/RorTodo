<h1>
    Here's your Todo List
</h1>

<p>
    <%= link_to "Wanna add new Todo?", new_todo_path %>
</p>
<br>

<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
    </tr>
    <% @todos.each do |todo| %>
        <tr>
            <td>
                <%= todo.name %>
            </td>
            <td>
                <%= todo.description %>
            </td>
            <td>
                <%= link_to "Edit", edit_todo_path(todo) %>
            </td>
            <td>
                <%= link_to "Show", todo_path(todo) %>
            </td>
            <td>
                <%#= link_to "Delete", todo_path(todo), method: :delete %>
                <%= link_to ('Delete'), todo_path(todo), data: { "turbo-method": :delete }, class: "btn btn-danger ml-3" %>
            </td>
        </tr>
    <% end %>
</table>


<hr>
<hr>

<ol>
    <% @todos.each do |todo| %>
        <li>
            Name: <%= todo.name %>
            <br>
            Description: <%= todo.description %>
            <%= link_to "Edit", edit_todo_path(todo) %>
            <%= link_to "Show", todo_path(todo) %>
            <%= link_to ('Delete'), todo_path(todo), data: { "turbo-method": :delete }, class: "btn btn-danger ml-3" %>
            <%#= link_to "Delete", todo_path(todo), method: :delete, data: {confirm: "Are you sure?"} %>
        </li>
        <hr>
    <% end %>
</ol>
